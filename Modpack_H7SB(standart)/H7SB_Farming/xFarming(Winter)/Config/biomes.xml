<eihwaz.de>
<!-- Snow -->
<remove xpath="/worldgeneration/biomes/biome[@name='snow']/weather"/>
<append xpath="/worldgeneration/biomes/biome[@name='snow']">
	<spectrum name="snow"/>
	<weather name="default" prob="1">
		<Temperature min="18" max="28" prob="1"/>
		<CloudThickness min="55" max="75" prob="1"/>
		<Precipitation min="30" max="60" prob="1"/>
		<Fog min="1" max="5" prob="1"/>
		<Wind min="18" max="25" prob="1"/>
		<ParticleEffect prefab="ParticleEffects/p_snowstorm1" ChunkMargin="7"/>
	</weather>
	<weather name="fog" prob="8">
		<Temperature min="18" max="28" prob="5"/>
		<CloudThickness min="55" max="75" prob="1"/>
		<Precipitation min="30" max="60" prob="1"/>
		<Fog min="1" max="5" prob="1"/>
		<Wind min="18" max="25" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
	<weather name="snow" prob="40">
		<Temperature min="12" max="18" prob="25"/>
		<CloudThickness min="90" max="100" prob="1"/>
		<Precipitation min="70" max="100" prob="1"/>
		<Fog min="5" max="15" prob="1"/>
		<Wind min="45" max="50" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
	<weather name="storm" prob="8">
		<Temperature min="12" max="18" prob="100"/>
		<CloudThickness min="90" max="100" prob="1"/>
		<Precipitation min="70" max="100" prob="1"/>
		<Fog min="5" max="15" prob="1"/>
		<Wind min="45" max="50" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
</append>

<!-- Grassland -->
<remove xpath="/worldgeneration/biomes/biome[@name='pine_forest']/weather"/>
<append xpath="/worldgeneration/biomes/biome[@name='pine_forest']">
	<spectrum name="snow"/>
	<weather name="default" prob="1">
		<Temperature min="26" max="32" prob="1"/>
		<CloudThickness min="10" max="30" prob="1"/>
		<Precipitation min="0" max="0" prob="1"/>
		<Fog min="0" max="2" prob="1"/>
		<Wind min="10" max="25" prob="1"/>
		<ParticleEffect prefab="ParticleEffects/p_snowstorm1" ChunkMargin="7"/>
	</weather>
	<weather name="fog" prob="8">
		<Temperature min="20" max="30" prob="25"/>
		<CloudThickness min="35" max="60" prob="1"/>
		<Precipitation min="0" max="0" prob="1"/>
		<Fog min="7" max="18" prob="1"/>
		<Wind min="5" max="6" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
	<weather name="snow" prob="40">
		<Temperature min="18" max="28" prob="100"/>
		<CloudThickness min="55" max="75" prob="1"/>
		<Precipitation min="30" max="60" prob="1"/>
		<Fog min="1" max="5" prob="1"/>
		<Wind min="18" max="25" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
	<weather name="storm" prob="8">
		<Temperature min="12" max="18" prob="50"/>
		<CloudThickness min="90" max="100" prob="1"/>
		<Precipitation min="70" max="100" prob="1"/>
		<Fog min="5" max="15" prob="1"/>
		<Wind min="45" max="50" prob="1"/>
		<spectrum name="Snowy"/>
	</weather>
</append>

<!-- Desert -->
<remove xpath="/worldgeneration/biomes/biome[@name='desert']/spectrum"/>
</eihwaz.de>