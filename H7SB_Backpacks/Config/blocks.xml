<eihwaz.de>
<!-- Rucksäcke -->
<append xpath="/blocks">
<block name="h7sb_rucksackBlock1">
	<property name="CustomIcon" value="cntBackpack01"/>
	<property name="CreativeMode" value="Dev"/>
	<property name="DescriptionKey" value="h7sb_rucksack1Desc"/>
	<property name="Tags" value="rucksackBlock"/>
	<property name="Group" value="Clothing"/>

	<property name="Material" value="Mcloth"/>
	<property name="Path" value="solid"/>
	<property name="MaxDamage" value="20"/>
	<property name="Shape" value="ModelEntity"/>
	<property name="Model" value="#Entities/LootContainers?backpack02Prefab.prefab"/>
	<property name="ModelOffset" value="0,0,0"/>
	<property name="Place" value="TowardsPlacerInverted"/>
	<property name="StabilitySupport" value="false"/>
	<property name="ImposterDontBlock" value="true"/>
	<property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
	<property class="RepairItems"><property name="resourceCloth" value="1"/></property>
	<property name="Stacknumber" value="1"/>
	<property name="FuelValue" value="6"/>
	<property name="SellableToTrader" value="false"/>
	<property name="Class" value="Loot"/>
	<property name="LootList" value="h7sb_smallBackpack"/>
	<drop event="Destroy" name="h7sb_rucksack1" count="1"/>
</block>
</append>

<append xpath="/blocks">
<block name="h7sb_rucksackBlock2">
	<property name="Extends" value="h7sb_rucksackBlock1"/>
	<property name="CustomIcon" value="cntBackpack03"/>
	<property name="DescriptionKey" value="h7sb_rucksack2Desc"/>
	<property name="CreativeMode" value="Dev"/>
	<property name="Tags" value="rucksackBlock"/>
	<property name="Model" value="#Entities/LootContainers?backpack03Prefab.prefab"/>
	<property class="RepairItems"><property name="resourceCloth" value="3"/></property>
	<property name="LootList" value="h7sb_mediumBackpack"/>
	<drop event="Destroy" name="h7sb_rucksack1" count="0"/>
	<drop event="Destroy" name="h7sb_rucksack2" count="1"/>
</block>
</append>

<append xpath="/blocks">
<block name="h7sb_rucksackBlock3">
	<property name="Extends" value="h7sb_rucksackBlock2"/>
	<property name="CustomIcon" value="cntBackpack03"/>
	<property name="CustomIconTint" value="FF7F50"/>
	<property name="CreativeMode" value="Dev"/>
	<property name="Tags" value="rucksackBlock"/>
	<property name="Model" value="#Entities/LootContainers?backpack01Prefab.prefab"/>
	<drop event="Destroy" name="h7sb_rucksack2" count="0"/>
	<drop event="Destroy" name="h7sb_rucksack3" count="1"/>
</block>
</append>

<append xpath="/blocks">
<block name="h7sb_rucksackBlock4">
	<property name="Extends" value="h7sb_rucksackBlock1" param1="Place,RepairItems"/>
	<property name="CustomIcon" value="cntWeaponsBagLarge"/>
	<property name="DescriptionKey" value="h7sb_rucksack4Desc"/>
	<property name="CreativeMode" value="Dev"/>
	<property name="Tags" value="rucksackBlock"/>
	<property name="Material" value="MmilitaryFiber"/>
	<property name="Model" value="#Entities/LootContainers?weapon_bags_largePrefab.prefab"/>
	<property name="ModelOffset" value="0,0,0.19"/>
	<property name="Place" value="TowardsPlacer"/>
	<property class="RepairItems"><property name="resourceCloth" value="9"/></property>
	<property name="LootList" value="h7sb_largeBackpack"/>
	<drop event="Destroy" name="h7sb_rucksack1" count="0"/>
	<drop event="Destroy" name="h7sb_rucksack4" count="1"/>
</block>
</append>
</eihwaz.de>