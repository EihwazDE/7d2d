<configs>
<!-- Starting Quest -->
<remove xpath="/quests/quest[@id='quest_BasicSurvival1']"/>
<append xpath="/quests">
	<quest id="quest_BasicSurvival1">
		<property name="name_key" value="startQuest"/>
		<property name="subtitle_key" value="startQuest"/>
		<property name="description_key" value="startQuestDesc"/>
		<property name="icon" value="ui_game_symbol_adventure"/>
		<property name="category_key" value="quest"/>
		<property name="difficulty" value="veryeasy"/>
		<property name="offer_key" value="startQuestDesc"/>
		<property name="shareable" value="false"/>
		
		<objective type="Goto" id="trader" value="5" phase="1">
			<property name="biome_filter_type" value="OnlyBiome" />
			<property name="biome_filter" value="pine_forest" />
			<property name="nav_object" value="go_to_trader" />
		</objective>

		<objective type="InteractWithNPC">
			<property name="phase" value="2"/>
			<property name="nav_object" value="return_to_trader" />
			<property name="use_closest" value="true" />
		</objective>
		
		<reward type="SkillPoints" value="3" chainreward="false"/>
	</quest>
</append>
</configs>