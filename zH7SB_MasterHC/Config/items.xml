<set xpath="/items/item[@name='resourceRawDiamond']/property[@name='EconomicValue']/@value">750</set>
<!--candy-->
<set xpath="/items/item[@name='drugAtomJunkies']/property[@name='EconomicValue']/@value">500</set>

<!-- Glass -->
<set xpath="/items/item[@name='unit_glass']/property[@name='CustomIcon']/@value">resourceBrokenGlass</set>
<set xpath="/items/item[@name='resourceBrokenGlass']/property[@name='Weight']/@value">3</set>
<set xpath="/items/item[@name='drinkJarEmpty']/property[@name='Weight']/@value">5</set>

<!-- Diary -->
<remove xpath="//property[@name='PickupJournalEntry']"/>

<!-- Meat -->
<set xpath="/items/item[@name='h7sb_fishingNet']/property[@class='Action0']/property[@name='Create_item_count']/@value">5</set>
<set xpath="/items/item[@name='h7sb_fishingNet']/property[@class='Action1']/property[@name='Create_item_count']/@value">10</set>

<!-- Mod Balance -->	
