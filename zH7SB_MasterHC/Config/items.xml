<eihwaz.de>
<!-- Money -->
<append xpath="/items/item"><property name="SellableToTrader" value="false"/></append>
<append xpath="/items/item[@name='resourceSilverNugget']"><property name="SellableToTrader" value="true"/></append>
<set xpath="/items/item[@name='resourceSilverNugget']/property[@name='EconomicValue']/@value">250</set>
<append xpath="/items/item[@name='resourceGoldNugget']"><property name="SellableToTrader" value="true"/></append>
<set xpath="/items/item[@name='resourceGoldNugget']/property[@name='EconomicValue']/@value">500</set>
